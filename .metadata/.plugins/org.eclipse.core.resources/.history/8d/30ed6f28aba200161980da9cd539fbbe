package snake;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class Board extends JFrame{
	private static final long serialVersionUID = 1L;
	
	private JPanel panel;
	private JLabel scoreLabel;
	private JLabel scoredPoints;
	
	public Board() {
		this.setBounds(100, 100, 600, 400);
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		this.setResizable(false);
		this.getContentPane().setLayout(null);
		this.setLocationRelativeTo(null);

		panel = new JPanel();
		panel.setBounds(12, 24, 574, 338);
		this.getContentPane().add(panel);
		
		scoreLabel = new JLabel("Score: ");
		scoreLabel.setBounds(12, 0, 49, 15);
		getContentPane().add(scoreLabel);
		
		scoredPoints = new JLabel("0000");
		scoredPoints.setBounds(62, 0, 70, 15);
		getContentPane().add(scoredPoints);
		
		paintPanel();
		this.setVisible(true);
	}	
	
	public void paintPanel(){
		panel.setBackground(Color.BLACK);
		Graphics2D g2 = (Graphics2D) g;
		g2.fillRect(10, 10, 10, 10);
	}
}











